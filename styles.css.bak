/* Basic reset and layout */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    background-color: #f4f4f4;
}

/* Header Styling */
header {
    background-color: #003366;
    padding: 20px;
    color: #fff;
}

header .logo img {
    max-width: 150px;
}

nav ul {
    list-style: none;
    display: flex;
    justify-content: flex-end;
}

nav ul li {
    margin-left: 20px;
}

nav ul li a {
    color: #fff;
    text-decoration: none;
    font-weight: bold;
}

/* Hero Section Styling */
#hero {
    background: url('hero-image.jpg') no-repeat center center/cover;
    padding: 100px 20px;
    text-align: center;
    color: #fff;
}

#hero h1 {
    font-size: 3rem;
}

.cta-button {
    background-color: #ff6600;
    padding: 10px 20px;
    text-decoration: none;
    color: #fff;
    font-size: 1.2rem;
    border-radius: 5px;
}

/* About Section Styling */
#about {
    padding: 50px 20px;
    text-align: center;
    background-color: #fff;
}

#about p {
    max-width: 800px;
    margin: 20px auto;
}

/* Services Section Styling */
#services {
    padding: 50px 20px;
    background-color: #f4f4f4;
}

.service-item {
    background-color: #fff;
    padding: 20px;
    margin: 10px 0;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.service-item h3 {
    color: #003366;
}s

/* Team Section Styles */
#team {
    padding: 40px;
    background-color: #f4f4f4;
}

.team-member {
    display: flex;
    align-items: center;
    margin-bottom: 30px;
}

.team-member-photo {
    flex-shrink: 0;
    margin-right: 20px;
}

.team-member-photo img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
}

.team-member-info {
    max-width: 500px;
}

.team-member-info h3 {
    font-size: 24px;
    margin-bottom: 10px;
}

.team-member-info p {
    font-size: 16px;
    margin-bottom: 8px;
}

.team-member-info a {
    color: #0066cc;
    text-decoration: none;
}

.team-member-info a:hover {
    text-decoration: underline;
}


/* Footer Section Styling */
footer {
    background-color: #003366;
    color: #fff;
    padding: 20px;
    text-align: center;
}

footer a {
    color: #fff;
    text-decoration: none;
}
