/* Basic reset and layout */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    background-color: #f4f4f4;
}

/* Header Styling */
header {
    background-color: #003366;
    padding: 20px;
    color: #fff;
}

header .logo img {
    max-width: 150px;
}

nav ul {
    list-style: none;
    display: flex;
    justify-content: flex-end;
}

nav ul li {
    margin-left: 20px;
}

nav ul li a {
    color: #fff;
    text-decoration: none;
    font-weight: bold;
}

/* Hero Section Styling */
#hero {
    background: url('hero-image.jpg') no-repeat center center/cover;
    padding: 100px 20px;
    text-align: center;
    color: #fff;
}

#hero h1 {
    font-size: 3rem;
}

.cta-button {
    background-color: #ff6600;
    padding: 10px 20px;
    text-decoration: none;
    color: #fff;
    font-size: 1.2rem;
    border-radius: 5px;
}

/* About Section Styling */
#about {
    padding: 50px 20px;
    text-align: center;
    background-color: #fff;
}

#about p {
    max-width: 800px;
    margin: 20px auto;
}

/* Services Section Styling */
#services {
    padding: 50px 20px;
    background-color: #f4f4f4;
}

.service-item {
    background-color: #fff;
    padding: 20px;
    margin: 10px 0;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.service-item h3 {
    color: #003366;
}s

/* Team Section Styles */
#team {
    padding: 60px 20px;
    background: linear-gradient(135deg, #00c6ff, #0072ff); /* Background gradient */
    color: white;
    text-align: center;
}

.section-title h2 {
    font-size: 36px;
    margin-bottom: 40px;
    font-weight: 700;
    letter-spacing: 1px;
}

.team-member {
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(0, 0, 0, 0.7); /* Semi-transparent dark background */
    padding: 30px;
    border-radius: 10px;
    max-width: 800px;
    margin: 0 auto;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.team-member:hover {
    transform: translateY(-10px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
}

.team-member-photo {
    flex-shrink: 0;
    margin-right: 30px;
}

.team-member-photo img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    border: 5px solid #fff;
    transition: transform 0.3s ease;
}

.team-member-photo img:hover {
    transform: scale(1.1); /* Slight zoom effect on hover */
}

.team-member-info {
    max-width: 500px;
    color: white;
}

.team-member-info h3 {
    font-size: 28px;
    margin-bottom: 10px;
    font-weight: 600;
}

.team-member-info p {
    font-size: 16px;
    margin-bottom: 8px;
    line-height: 1.5;
}

.team-member-info a {
    color: #ffcc00;
    font-weight: 500;
    text-decoration: none;
    transition: color 0.3s ease;
}

.team-member-info a:hover {
    color: #ffbb33; /* Hover effect for links */
    text-decoration: underline;
}

@media (max-width: 768px) {
    .team-member {
        flex-direction: column;
    }

    .team-member-photo {
        margin-right: 0;
        margin-bottom: 20px;
    }
}


/* Footer Section Styling */
footer {
    background-color: #003366;
    color: #fff;
    padding: 20px;
    text-align: center;
}

footer a {
    color: #fff;
    text-decoration: none;
}
