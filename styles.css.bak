/* Basic reset and layout */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    background-color: #f4f4f4;
}

/* Header Styling */
header {
    background-color: #003366;
    padding: 20px;
    color: #fff;
}

header .logo img {
    max-width: 150px;
}

nav ul {
    list-style: none;
    display: flex;
    justify-content: flex-end;
}

nav ul li {
    margin-left: 20px;
}

nav ul li a {
    color: #fff;
    text-decoration: none;
    font-weight: bold;
}

/* Hero Section Styling */
#hero {
    background: url('hero-image.jpg') no-repeat center center/cover;
    padding: 100px 20px;
    text-align: center;
    color: #fff;
}

#hero h1 {
    font-size: 3rem;
}

.cta-button {
    background-color: #ff6600;
    padding: 10px 20px;
    text-decoration: none;
    color: #fff;
    font-size: 1.2rem;
    border-radius: 5px;
}

/* About Section Styling */
#about {
    padding: 50px 20px;
    text-align: center;
    background-color: #fff;
}

#about p {
    max-width: 800px;
    margin: 20px auto;
}

/* Services Section Styling */
#services {
    padding: 50px 20px;
    background-color: #f4f4f4;
}

.service-item {
    background-color: #fff;
    padding: 20px;
    margin: 10px 0;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.service-item h3 {
    color: #003366;
}s

/* General Styles */
#team {
    padding: 60px 20px;
    background: #f4f4f4; /* Light background for the section */
    text-align: center;
}

.section-title h2 {
    font-size: 36px;
    margin-bottom: 40px;
    font-family: 'Arial', sans-serif;
    font-weight: 700;
    letter-spacing: 1px;
}

/* 3D Hover Effect for Team Member */
.team-member {
    display: inline-block;
    perspective: 1500px; /* Adds depth for 3D effect */
    margin-bottom: 40px;
}

.team-member-content {
    background: #ffffff;
    border-radius: 15px;
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    transition: transform 0.5s, box-shadow 0.5s;
    padding: 30px;
    width: 300px;
    height: 400px;
    position: relative;
    overflow: hidden;
    text-align: center;
}

.team-member:hover .team-member-content {
    transform: rotateY(20deg) rotateX(10deg); /* 3D rotation on hover */
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
}

.team-member-photo {
    margin-bottom: 20px;
}

.team-member-photo img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    border: 5px solid #ffcc00;
    transition: transform 0.3s ease;
}

.team-member-photo img:hover {
    transform: scale(1.1); /* Slight zoom effect on hover */
}

.team-member-info {
    color: #333;
}

.team-member-info h3 {
    font-size: 24px;
    font-family: 'Segoe UI', sans-serif;
    font-weight: 700;
    margin-bottom: 10px;
    color: #1c1c1c;
}

.team-member-info p {
    font-size: 14px;
    line-height: 1.5;
    color: #666;
}

.team-member-info a {
    color: #ffcc00;
    text-decoration: none;
    transition: color 0.3s ease;
}

.team-member-info a:hover {
    color: #ffbb33;
    text-decoration: underline;
}

/* Mobile Responsiveness */
@media (max-width: 768px) {
    .team-member {
        display: block;
        margin: 0 auto;
    }

    .team-member-content {
        width: 80%;
        height: auto;
    }

    .team-member-photo img {
        width: 100px;
        height: 100px;
    }
}


/* Footer Section Styling */
footer {
    background-color: #003366;
    color: #fff;
    padding: 20px;
    text-align: center;
}

footer a {
    color: #fff;
    text-decoration: none;
}
